{
  "openapi": "3.0.3",
  "info": {
    "title": "SprintLite API",
    "version": "1.0.0",
    "description": "API documentation for SprintLite project management system"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "role": { "type": "string" },
          "avatarUrl": { "type": "string", "nullable": true },
          "createdAt": { "type": "string" }
        }
      },
      "Project": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "key": { "type": "string" },
          "description": { "type": "string" },
          "owner": { "$ref": "#/components/schemas/User" },
          "members": { "type": "array", "items": { "$ref": "#/components/schemas/User" } }
        }
      },
      "Sprint": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "project": { "$ref": "#/components/schemas/Project" },
          "name": { "type": "string" },
          "startDate": { "type": "string" },
          "endDate": { "type": "string" },
          "goal": { "type": "string" },
          "status": { "type": "string" }
        }
      },
      "Issue": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "project": { "$ref": "#/components/schemas/Project" },
          "sprint": { "$ref": "#/components/schemas/Sprint", "nullable": true },
          "type": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string", "nullable": true },
          "assignee": { "$ref": "#/components/schemas/User", "nullable": true },
          "reporter": { "$ref": "#/components/schemas/User" },
          "priority": { "type": "string" },
          "status": { "type": "string" }
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "issue": { "$ref": "#/components/schemas/Issue" },
          "author": { "$ref": "#/components/schemas/User" },
          "body": { "type": "string" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string" },
                  "avatarUrls": { "type": "string", "nullable": true }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User registered successfully" },
          "400": { "description": "Invalid input" },
          "404": { "description": "Email already exists" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object", "properties": { "email": { "type": "string" }, "password": { "type": "string" } }, "required": ["email", "password"] }
            }
          }
        },
        "responses": { "200": { "description": "Login successful" }, "400": { "description": "Missing fields" }, "401": { "description": "Invalid password" }, "404": { "description": "Email not found" }, "500": { "description": "Server error" } }
      }
    },
    "/auth/me": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get current user info",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "User info returned" }, "404": { "description": "Error getting data" } }
      }
    },
    "/auth/alluser": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get all users",
        "responses": { "200": { "description": "List of users" }, "404": { "description": "Error fetching users" } }
      }
    },
    "/users/{id}": {
      "patch": {
        "tags": ["Users"],
        "summary": "Update user profile",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "email": { "type": "string" }, "password": { "type": "string" } } } } } },
        "responses": { "200": { "description": "Profile updated" }, "400": { "description": "Nothing to update" }, "500": { "description": "Server error" } }
      }
    },
    "/users/{id}/role": {
      "patch": {
        "tags": ["Users"],
        "summary": "Update user role",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "role": { "type": "string" } } } } } },
        "responses": { "200": { "description": "Role updated" }, "400": { "description": "Invalid user id" }, "404": { "description": "User not found" }, "500": { "description": "Server error" } }
      }
    },
    "/project/createProject": {
      "post": {
        "tags": ["Projects"],
        "summary": "Create a new project",
        "security": [{ "bearerAuth": [] }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "key": { "type": "string" }, "description": { "type": "string" }, "membersEmail": { "type": "array", "items": { "type": "string" } } }, "required": ["name","key","description"] } } } },
        "responses": { "201": { "description": "Project created" }, "400": { "description": "Missing fields" }, "500": { "description": "Server error" } }
      }
    },
    "/project/listProject": {
      "get": {
        "tags": ["Projects"],
        "summary": "List projects of user",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Projects returned" }, "400": { "description": "No projects found" }, "500": { "description": "Server error" } }
      }
    },
    "/project/{id}/members": {
      "post": {
        "tags": ["Projects"],
        "summary": "Add member to project",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "email": { "type": "string" } }, "required": ["email"] } } } },
        "responses": { "200": { "description": "Member added" }, "400": { "description": "Member exists / missing data" }, "404": { "description": "Project or user not found" }, "500": { "description": "Server error" } }
      }
    },
    "/project/{id}/member/{userId}": {
      "delete": {
        "tags": ["Projects"],
        "summary": "Delete member from project",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }, { "name": "userId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Member deleted" }, "400": { "description": "Project or member not found" }, "500": { "description": "Server error" } }
      }
    },
    "/project/{id}/sprints": {
      "post": {
        "tags": ["Sprints"],
        "summary": "Create sprint",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "startDate": { "type": "string" }, "endDate": { "type": "string" }, "goal": { "type": "string" }, "status": { "type": "string" } }, "required": ["name","startDate","endDate"] } } } },
        "responses": { "200": { "description": "Sprint created" }, "400": { "description": "Missing fields" }, "404": { "description": "Project not found" }, "500": { "description": "Server error" } }
      }
    },
    "/sprints/{id}/status": {
      "patch": {
        "tags": ["Sprints"],
        "summary": "Change sprint status",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "status": { "type": "string" } }, "required": ["status"] } } } },
        "responses": { "200": { "description": "Status updated" }, "400": { "description": "Missing status" }, "404": { "description": "Sprint not found" }, "500": { "description": "Server error" } }
      }
    },
    "/project/{id}/sprints": {
      "get": {
        "tags": ["Sprints"],
        "summary": "Get all sprints of project",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Sprints returned" }, "403": { "description": "Not allowed" }, "404": { "description": "No sprints found" }, "500": { "description": "Server error" } }
      }
    },
    "/issues/{id}/issue": {
      "post": {
        "tags": ["Issues"],
        "summary": "Add issue to project",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "sprintId": { "type": "string" }, "type": { "type": "string" }, "title": { "type": "string" }, "description": { "type": "string" }, "assignee": { "type": "string" }, "priority": { "type": "string" }, "status": { "type": "string" } }, "required": ["type","title","priority","status"] } } } },
        "responses": { "200": { "description": "Issue created" }, "400": { "description": "Invalid data / project not found" }, "404": { "description": "Sprint not found" }, "500": { "description": "Server error" } }
      }
    },
    "/issues/{id}/issue": {
      "get": {
        "tags": ["Issues"],
        "summary": "Get all issues for project (filter optional)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "sprintId", "in": "query", "required": false, "schema": { "type": "string" } },
          { "name": "status", "in": "query", "required": false, "schema": { "type": "string" } },
          { "name": "assignee", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Issues returned" }, "404": { "description": "Project not found" }, "500": { "description": "Server error" } }
      }
    },
    "/issues/{id}": {
      "get": {
        "tags": ["Issues"],
        "summary": "Get issue details",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Issue details returned" }, "500": { "description": "Server error" } }
      },
      "delete": {
        "tags": ["Issues"],
        "summary": "Delete issue",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Issue deleted" }, "404": { "description": "Issue not found" }, "500": { "description": "Server error" } }
      }
    },
    "/comments/{id}/comment": {
      "post": {
        "tags": ["Comments"],
        "summary": "Add comment to issue",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "body": { "type": "string" } }, "required": ["body"] } } } },
        "responses": { "200": { "description": "Comment added" }, "400": { "description": "Issue not found / empty body" }, "500": { "description": "Server error" } }
      },
      "get": {
        "tags": ["Comments"],
        "summary": "List comments of issue",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Comments returned" }, "404": { "description": "Issue not found" }, "500": { "description": "Server error" } }
      }
    },
    "/comments/comment/{id}": {
      "delete": {
        "tags": ["Comments"],
        "summary": "Delete a comment",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Comment deleted" }, "403": { "description": "Not authorized" }, "404": { "description": "Comment not found" }, "500": { "description": "Server error" } }
      }
    }
  }
}
